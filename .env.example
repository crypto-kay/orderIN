# OrderIN Environment Configuration
# Copy this file to .env and update with your values

# Application
VITE_APP_NAME=OrderIN
VITE_APP_VERSION=1.0.0

# Database Configuration
VITE_POUCHDB_DB_NAME=orderin_db

# API Configuration (if using external API)
# VITE_API_URL=http://localhost:3001/api

# Demo Credentials (for development/demo only)
# Format: VITE_DEMO_USER_{ROLE}_{USERNAME}=PIN
VITE_DEMO_USER_ADMIN_ADMIN=1234
VITE_DEMO_USER_STAFF_STAFF=1234
VITE_DEMO_USER_KITCHEN_KITCHEN=1234

# Feature Flags
VITE_ENABLE_QR_GENERATION=true
VITE_ENABLE_OFFLINE_MODE=true

# Development Settings
VITE_DEV_MODE=false